{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6",
        "esnext"
     ],
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "dist",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "resolveJsonModule": true,
     "esModuleInterop": true,
     "sourceMap": true
  },
  "include": [
     "src/**/*"
  ],
  "exclude": [
     "node_modules"
  ]
}